@model cs_aspnet_mvc_crud.Models.user_permission

@{
    ViewBag.Title = "Edit";
    ViewBag.Model = "User Permission";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col mx-auto">
        <div class="p-4 p-md-5 border rounded-3 bg-light">
            <h4>@ViewBag.Title @ViewBag.Model</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <div class="form-group mb-3">

                <div class="control-label">User Position</div>
                <div class="col-md-10">
                    @Html.DropDownList("user_position_id", null, htmlAttributes: new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.user_position_id, "", new { @class = "text-danger" })
                </div>

                <div class="control-label">User Action</div>
                <div class="col-md-10">
                    @Html.DropDownList("user_action_id", null, htmlAttributes: new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.user_action_id, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-lg btn-dark" })
                    <input type="submit" value="Save Changes" class="btn btn-lg btn-primary" />
                </div>
            </div>
        </div>
    </div>
}